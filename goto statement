#include<stdio.h>
int main()
{
    int n;
    printf("\n enter a no  ");
    scanf("%d",&n);
    if(n%2==0)
        goto even;
    else
        goto odd;
    even: printf("\n Even "); exit(0);
    odd : printf("\n odd");
    
    
    
#include<stdio.h>
int main()
{
    int a;
    a=1;
    test:
    {
        printf("\n%d",a);
        a++;
    }
    if (a<=20)
    goto test;
}